<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundDark">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvTickets"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:clipToPadding="false"/>

    <TextView
        android:id="@+id/tvEmpty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아직 예매 내역이 없습니다."
        android:textColor="#777777"
        android:textSize="16sp"
        android:layout_gravity="center"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/layoutLoginRequired"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        android:background="@color/backgroundDark"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_back_hand"
            android:contentDescription="로그인 필요"
            android:alpha="0.5"
            app:tint="#FFFFFF"
            xmlns:app="http://schemas.android.com/apk/res-auto"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="로그인이 필요한 서비스입니다."
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="예매 내역을 확인하려면 로그인을 해주세요."
            android:textColor="#AAAAAA"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            android:textAlignment="center"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnLoginGo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="로그인 하러 가기"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:background="@drawable/bg_btn_lime_rounded"
            android:paddingHorizontal="32dp"
            android:stateListAnimator="@null"/>
    </LinearLayout>
</FrameLayout>