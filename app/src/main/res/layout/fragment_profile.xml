<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundDark">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/loginGroup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:padding="16dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/ivLogo"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/limelight_logo"
                android:contentDescription="LimeLight 로고"
                android:layout_marginBottom="12dp"/>

            <EditText
                android:id="@+id/etId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="아이디"
                android:inputType="text"
                android:minHeight="48dp"
                android:padding="8dp"
                android:background="@android:color/transparent"
                android:textColor="@color/textLight"
                android:textColorHint="@color/textLight" />
            <View
                android:id="@+id/lineId"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/textLight"/>

            <EditText
                android:id="@+id/etPw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="비밀번호"
                android:inputType="textPassword"
                android:minHeight="48dp"
                android:padding="8dp"
                android:background="@android:color/transparent"
                android:textColor="@color/textLight"
                android:textColorHint="@color/textLight" />
            <View
                android:id="@+id/linePw"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/textLight"/>

            <Button
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="로그인"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:backgroundTint="@color/navLime"
                android:textColor="@color/textDark"
                android:minHeight="60dp"
                android:padding="8dp" />

            <TextView
                android:id="@+id/tvSignup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="회원가입"
                android:textSize="18sp"
                android:textColor="@color/navLime"
                android:textStyle="bold"
                android:layout_gravity="end"
                android:paddingTop="18dp"
                android:paddingBottom="50dp"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/profileGroup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:padding="16dp"
        android:visibility="gone">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:background="#111"
            android:padding="16dp"
            android:clipToPadding="false"
            android:elevation="2dp">

            <TextView
                android:id="@+id/tvLevelBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lv.1 뉴비"
                android:textSize="18sp"
                android:textColor="@color/navLime"
                android:textStyle="bold"
                android:background="#222"
                android:padding="8dp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tvLevelTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="설레는 첫 티켓"
                android:layout_marginTop="6dp"
                android:textColor="@color/textLight"
                android:textSize="22sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvLevelDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="레벨 설명"
                android:textColor="@color/textLight"
                android:gravity="center_horizontal"
                android:layout_marginTop="6dp"
                android:textSize="18sp"
                android:lineSpacingExtra="4dp"
                android:textAlignment="center"
                android:layout_marginHorizontal="12dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="30dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    app:cardCornerRadius="60dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@android:color/transparent"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:id="@+id/ivProfile"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_placeholder"
                        android:scaleType="centerCrop"
                        android:contentDescription="프로필" />
                </androidx.cardview.widget.CardView>

                <Button
                    android:id="@+id/btnChangePhoto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="사진 변경"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="@color/textDark"
                    android:backgroundTint="@color/navLime" />

                <TextView
                    android:id="@+id/tvNickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="닉네임"
                    android:textColor="@color/textLight"
                    android:layout_marginTop="10dp"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="email@example.com"
                    android:textColor="@color/textLight"
                    android:textSize="16sp"
                    android:layout_marginTop="4dp"/>

                <TextView
                    android:id="@+id/tvDday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textLight"
                    android:textSize="18sp"
                    android:layout_marginTop="6dp"
                    android:textAlignment="center"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="레벨 진행률"
                        android:textSize="16sp"
                        android:textColor="@color/textLight"/>
                    <TextView
                        android:id="@+id/tvPercent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0%"
                        android:textSize="16sp"
                        android:textColor="@color/navLime"
                        android:textStyle="bold"
                        android:layout_marginStart="4dp"/>
                </LinearLayout>

                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="14dp"
                    android:progress="0"
                    android:max="100"
                    android:progressDrawable="@drawable/progress_lime"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:id="@+id/tvExpMsg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="레벨업까지 n편 남았습니다."
                    android:textSize="16sp"
                    android:textColor="@color/textLight"
                    android:layout_marginTop="6dp"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:weightSum="2">

                <LinearLayout
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#222"
                    android:padding="12dp"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="영화로 채운 시간"
                        android:textSize="16sp"
                        android:textColor="@color/textLight"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tvStatsTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0시간 0분"
                        android:textColor="@color/navLime"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <LinearLayout
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#222"
                    android:padding="12dp"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="수집한 이야기"
                        android:textSize="16sp"
                        android:textColor="@color/textLight"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tvStatsCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0편"
                        android:textColor="@color/navLime"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tvLogout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="로그아웃"
                android:textSize="16dp"
                android:textColor="#F33F3F"
                android:textStyle="bold"
                android:layout_gravity="end"
                android:layout_marginTop="40dp"
                android:paddingBottom="35dp"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</FrameLayout>